#include <iostream>
#include<cstdlib>
#include<ctime>
using namespace std;

void game(int original_num, int chances) {
    int guessed_number;

    while (chances) {
        cout << "Enter your guess: ";
        cin >> guessed_number;

        if (guessed_number == original_num) {
            cout << "ðŸŽ‰ You won the game!\n";
            cout << "Congratulations!\n";
            return; 
        }

        if (guessed_number > original_num)
            cout << "Too high!\n";
        else
            cout << "Too low!\n";

        chances--;
        cout << "Chances left: " << chances << "\n";
    }

    cout << "âŒ You've used all chances! The correct number was " << original_num << ".\n";
}

int main() {
    cout << "ðŸŽ® Welcome to the Guessing Game!\n";
    int choice = 1;

    while (choice != 2) {
        cout << "\n1 - Play\n2 - Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1: {
                int chances = 5;
                srand(time(0)); 
                int original_num = rand() % 1000 + 1; 
                game(original_num, chances);
                break;
            }
            case 2:
                cout << "ðŸ‘‹ Visit again!\n";
                break;
            default:
                cout << "â— Invalid choice. Please try again.\n";
        }
    }

    return 0;
}
